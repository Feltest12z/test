        local function updateScrollingFrame(scrollFrame)
            if not scrollFrame then return end
            local layout = scrollFrame:FindFirstChildOfClass("UIListLayout")
            if not layout then
                layout = Instance.new("UIListLayout", scrollFrame)
                layout.Padding = UDim.new(0, 8)
                layout.SortOrder = Enum.SortOrder.LayoutOrder
                layout.VerticalAlignment = Enum.VerticalAlignment.Top
            end
            
            local function refreshCanvas()
                if not scrollFrame or not layout then return end
                task.wait(0.05)
                local contentHeight = layout.AbsoluteContentSize.Y
                scrollFrame.CanvasSize = UDim2.new(0, 0, 0, contentHeight + 20)
            end
            
            layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(refreshCanvas)
            scrollFrame.ChildAdded:Connect(refreshCanvas)
            scrollFrame.ChildRemoved:Connect(refreshCanvas)
            refreshCanvas()
        end

        updateScrollingFrame(tabsHolder)

