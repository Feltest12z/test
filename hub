function FelixzUI:Notify(Title, Text, Duration, Icon, plr, role)
    Duration = Duration or 3
    Icon = Icon or "rbxassetid://4483345998"
    
    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 290, 0, 65)
    Frame.BackgroundColor3 = FelixzUI.CurrentTheme.Accent
    Frame.BackgroundTransparency = 1
    Frame.BorderSizePixel = 0
    Frame.ZIndex = 100
    Frame.LayoutOrder = tick()
    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 10)
    Frame.Parent = NotifHolder

    local thumbImg
    if plr and plr.UserId then
        local content = game.Players:GetUserThumbnailAsync(plr.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size100x100)
        thumbImg = Instance.new("ImageLabel")
        thumbImg.Image = content
        thumbImg.Size = UDim2.new(0, 45, 0, 45)
        thumbImg.Position = UDim2.new(0, 10, 0.5, -22)
        thumbImg.BackgroundTransparency = 1
        thumbImg.ImageTransparency = 1
        thumbImg.ZIndex = 101
        thumbImg.Parent = Frame
        Instance.new("UICorner", thumbImg).CornerRadius = UDim.new(1, 0)
    end

    local IconLabel = Instance.new("ImageLabel", Frame)
    IconLabel.Size = UDim2.new(0, 24, 0, 24)
    IconLabel.Position = UDim2.new(0, thumbImg and 65 or 15, 0.5, -12)
    IconLabel.BackgroundTransparency = 1
    IconLabel.Image = Icon
    IconLabel.ImageColor3 = FelixzUI.CurrentTheme.Primary
    IconLabel.ImageTransparency = 1
    IconLabel.ZIndex = 101

    local TitleLabel = Instance.new("TextLabel", Frame)
    TitleLabel.Text = Title
    TitleLabel.Font = Enum.Font.SourceSansBold
    TitleLabel.TextSize = 15
    TitleLabel.TextColor3 = FelixzUI.CurrentTheme.Text
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Position = UDim2.new(0, thumbImg and 65 or 50, 0, 8)
    TitleLabel.Size = UDim2.new(1, -80, 0, 20)
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.TextTransparency = 1
    TitleLabel.ZIndex = 101

    local TextLabel = Instance.new("TextLabel", Frame)
    TextLabel.Text = Text
    TextLabel.Font = Enum.Font.SourceSans
    TextLabel.TextSize = 13
    TextLabel.TextColor3 = (
        role == "Murderer" and Color3.fromRGB(255, 60, 60)) or
        (role == "Sheriff" and Color3.fromRGB(80, 160, 255)) or
        (role == "Hero" and Color3.fromRGB(255, 220, 0)) or
        FelixzUI.CurrentTheme.Primary
    TextLabel.BackgroundTransparency = 1
    TextLabel.Position = UDim2.new(0, thumbImg and 65 or 50, 0, 32)
    TextLabel.Size = UDim2.new(1, -90, 0, 25)
    TextLabel.TextWrapped = true
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.TextTransparency = 1
    TextLabel.ZIndex = 101
    TextLabel.Parent = Frame

    -- Animate In
    TweenService:Create(Frame, TweenInfo.new(0.3), {BackgroundTransparency = 0}):Play()
    if thumbImg then TweenService:Create(thumbImg, TweenInfo.new(0.3), {ImageTransparency = 0}):Play() end
    TweenService:Create(IconLabel, TweenInfo.new(0.3), {ImageTransparency = 0}):Play()
    TweenService:Create(TitleLabel, TweenInfo.new(0.3), {TextTransparency = 0}):Play()
    TweenService:Create(TextLabel, TweenInfo.new(0.3), {TextTransparency = 0}):Play()

    -- Animate Out
    task.delay(Duration, function()
        if Frame and Frame.Parent then
            TweenService:Create(Frame, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
            if thumbImg then TweenService:Create(thumbImg, TweenInfo.new(0.3), {ImageTransparency = 1}):Play() end
            TweenService:Create(IconLabel, TweenInfo.new(0.3), {ImageTransparency = 1}):Play()
            TweenService:Create(TitleLabel, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
            TweenService:Create(TextLabel, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
            task.wait(0.3)
            Frame:Destroy()
        end
    end)
end

-- Main Functions
function FelixzUI:CreateWindow(Config)
