-- ØªØ­Ø¯ÙŠØ¯ Ù†ÙˆØ¹ Ø§Ù„Ø¬Ù‡Ø§Ø²
local function getDeviceType()
    local cam = workspace.CurrentCamera
    local screenSize = cam and cam.ViewportSize or Vector2.new(1920, 1080)

    if GuiService:IsTenFootInterface() then
        return "Console", "ðŸŽ®"
    elseif UIS.TouchEnabled and not UIS.KeyboardEnabled then
        if screenSize.X >= 1000 or screenSize.Y >= 700 then
            return "Tablet", "ðŸ“²"
        else
            return "Mobile", "ðŸ“±"
        end
    else
        return "PC", "ðŸ’»"
    end
end

-- Notification System (Ù…Ø­Ø³Ù‘Ù†)
local NotifGui = Instance.new("ScreenGui")
